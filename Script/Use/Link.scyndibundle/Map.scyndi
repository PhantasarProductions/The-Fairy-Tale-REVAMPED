	Void MCall(String func,a,b,c,d,e,f,g,h)
		String pr
		For i,p in iPairs {a,b,c,d,e,f,g,h}
			If i>1 
				pr += ", "
			End
			Switch lua.type(p)
				Case "string"
					pr += "\""..p.."\""
				Case "number" "boolean"
					pr += toString(p)
				Default
					lua.error("Illegal MCall type "..lua.type(p))
			End
		End
		If pr=="" 
			pr = "nil"
		End
		//print(sprintf ("Calling %s(%s)",func,pr))
		State.Call("FLOW_FIELD",func,pr)
	End

