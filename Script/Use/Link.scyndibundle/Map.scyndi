	Var LabelEach(String Label)
		String Raw := ISGET.String("FLOW_FIELD",sprintf("FlowField.Map.CurrentLayer.SLabelEnum(\"%s\")",Label))
		Table Tab := XSplit(Raw,";")
		Int I=0
		//Var Ret()
		dDef Ret
			I++
			If I>len(Tab)
				Return Nil
			End
			Return Lua.tonumber(Tab[I])
		End
		Return Ret
	End
	
